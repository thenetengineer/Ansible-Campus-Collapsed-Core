{# event options                                                                       #}
{# ---------------------------------------------------------------------------------- -#}
{% if configuration.event_options is defined %}
event-options {
    {% for each in configuration.event_options.policy %}
    policy {{ each.name }} {
        events [ {{ each.events|join(' ') }} ];
        then {
            event-script {{ each.then.event_script.name }};
        }
    }
    {% endfor %}
    event-script {
        {% for each in configuration.event_options.event_script.file %}
        file {{ each.name }} {
            python-script-user {{ each.python_script_user }};
            checksum sha-256 {{ each.checksum.sha_256 }};
        }
        {% endfor %}
    }
}
{% endif %}